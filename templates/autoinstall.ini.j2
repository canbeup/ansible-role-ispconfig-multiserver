; {{ ansible_managed }}

[install]
language=en
install_mode={{ ispconfig_install_mode }}
hostname={{ ispconfig_hostname }}
mysql_hostname={{ ispconfig_mysql_hostname }}
mysql_port={{ ispconfig_mysql_port }}
mysql_root_user={{ ispconfig_mysql_root_user }}
mysql_root_password={{ ispconfig_mysql_root_password }}
mysql_database={{ ispconfig_mysql_database }}
mysql_charset={{ ispconfig_mysql_charset }}
http_server={{ ispconfig_http_server }}
ispconfig_port={{ ispconfig_ispconfig_port }}
ispconfig_use_ssl={{ ispconfig_ispconfig_use_ssl }}
ispconfig_admin_password={{ ispconfig_ispconfig_admin_password }}

[ssl_cert]
ssl_cert_country={{ ispconfig_ssl_cert_country }}
ssl_cert_state={{ ispconfig_ssl_cert_state }}
ssl_cert_locality={{ ispconfig_ssl_cert_locality }}
ssl_cert_organisation={{ ispconfig_ssl_cert_organisation }}
ssl_cert_organisation_unit={{ ispconfig_ssl_cert_organisation_unit }}
ssl_cert_common_name={{ ispconfig_ssl_cert_common_name }}
ssl_cert_email={{ ispconfig_ssl_cert_email }}

[expert]
mysql_ispconfig_user={{ ispconfig_mysql_ispconfig_user }}
mysql_ispconfig_password={{ ispconfig_mysql_ispconfig_password }}
join_multiserver_setup={{ ispconfig_join_multiserver_setup }}
mysql_master_hostname={{ ispconfig_mysql_master_hostname }}
mysql_master_root_user={{ ispconfig_mysql_master_root_user }}
mysql_master_root_password={{ ispconfig_mysql_master_root_password }}
mysql_master_database={{ ispconfig_mysql_master_database }}
configure_mail={{ ispconfig_configure_mail }}
configure_jailkit={{ ispconfig_configure_jailkit }}
configure_ftp={{ ispconfig_configure_ftp }}
configure_dns={{ ispconfig_configure_dns }}
configure_apache={{ ispconfig_configure_apache }}
configure_nginx={{ ispconfig_configure_nginx }}
configure_firewall={{ ispconfig_configure_firewall }}
{% if ispconfig_join_multiserver_setup == 'y' %}
install_ispconfig_web_interface=n
{% else %}
install_ispconfig_web_interface={{ ispconfig_install_web_interface }}
{% endif %}

[update]
do_backup={{ ispconfig_do_backup }}
mysql_root_password={{ ispconfig_mysql_root_password }}
mysql_master_hostname={{ ispconfig_mysql_master_hostname }}
mysql_master_root_user={{ ispconfig_mysql_master_root_user }}
mysql_master_root_password={{ ispconfig_mysql_master_root_password }}
mysql_master_database={{ ispconfig_mysql_master_database }}
reconfigure_permissions_in_master_database={{ ispconfig_reconfigure_permissions_in_master_database }}
reconfigure_services={{ ispconfig_reconfigure_services }}
ispconfig_port={{ ispconfig_ispconfig_port }}
create_new_ispconfig_ssl_cert={{ ispconfig_create_new_ispconfig_ssl_cert }}
reconfigure_crontab={{ ispconfig_reconfigure_crontab }}

